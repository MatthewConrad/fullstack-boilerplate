{
    "name": "fullstack-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for a fullstack application using NodeJS, Express, and a front-end framework with TypeScript.",
    "main": "index.js",
    "scripts": {
        "start": "ts-node src/server/server.ts",
        "build": "npm run copy-assets && npm run build:sass && npm run build:client",
        "build:client": "webpack",
        "build:sass": "node-sass src/client/styles/main.scss build/static/main.css",
        "copy-assets": "copyfiles -u 2 src/client/assets/**/* build",
        "lint": "eslint 'src/**/*.{js,ts,tsx}'",
        "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
        "test": "echo \"Error: no test specified\" && exit 1",
        "watch": "npm run copy-assets && concurrently -k -p \"[{name}]\" -n \"Sass,Client,Server\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:sass\" \"npm run watch:client\" \"npm run watch:server-on-all\"",
        "watch:client": "webpack --watch",
        "watch:server": "nodemon src/server/server.ts",
        "watch:server-on-all": "nodemon src/server/server.ts --ext ts,tsx,json,scss",
        "watch:sass": "node-sass -w src/client/styles -o build/static"
    },
    "author": "Matthew Conrad",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.12.16",
        "@babel/plugin-transform-runtime": "^7.12.15",
        "@babel/preset-env": "^7.12.16",
        "@babel/preset-react": "^7.12.13",
        "@babel/preset-typescript": "^7.12.16",
        "@babel/runtime": "^7.12.13",
        "@types/express": "^4.17.11",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^17.0.1",
        "@typescript-eslint/eslint-plugin": "^4.15.0",
        "@typescript-eslint/parser": "^4.15.0",
        "babel-loader": "^8.2.2",
        "concurrently": "^5.3.0",
        "copyfiles": "^2.4.1",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "node-sass": "^5.0.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.5",
        "webpack": "^5.21.2",
        "webpack-cli": "^4.5.0"
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "reload": "^3.1.1"
    }
}
